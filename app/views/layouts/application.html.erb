<html>
  <head>
    <title>Aperture</title>
    
    <%= csrf_meta_tags %>
 

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <% if current_user %>
      <script>
        window.currentUser = { 
          "id": "<%= current_user.id %>",
