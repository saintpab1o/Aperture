    <% end %>

      <script type="text/javascript">
        window.splashURL = "<%= image_url("splash.jpg") %>";

      </script>
    <meta property="og:title" content="Aperture" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://aperture1.herokuapp.com/#/" />
    <meta property="og:image" content="/Users/saintpablo/Desktop/aA/Aperture-fullstack/Aperture/app/assets/images/ss.png" />
